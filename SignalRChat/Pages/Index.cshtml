@page
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="css/chat.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">


<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="text-center">Real-time Chat</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label for="userInput" class="form-label">User Name</label>
            <input type="text" id="userInput" class="form-control" placeholder="Enter your name" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label for="messageInput" class="form-label">Message</label>
            <input type="text" class="form-control" id="messageInput" placeholder="Type your message" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 text-end">
            <button id="sendButton" class="btn btn-primary custom">Send Message</button>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <hr />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <ul id="messagesList" class="list-group">

            </ul>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <p id="sentimentResult"></p>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
